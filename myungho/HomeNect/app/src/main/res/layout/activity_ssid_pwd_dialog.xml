<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.capstone.sejong.homenect.SSidPwdDialog">

    <EditText
        android:id="@+id/et_ssid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        android:hint="연결할 wifi ssid"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_ssid"
        android:ems="8"
        android:inputType="textPassword"
        android:hint="Password"
        android:layout_alignEnd="@+id/et_ssid"
        android:layout_alignStart="@+id/et_ssid" />

    <Button
        android:id="@+id/btn_ok_ssid_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:layout_below="@+id/et_pwd"
        android:layout_alignStart="@+id/et_pwd" />

    <Button
        android:id="@+id/btn_cancel_ssid_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_ok_ssid_pwd"
        android:layout_alignEnd="@+id/et_pwd"
        android:text="취소" />

</RelativeLayout>
