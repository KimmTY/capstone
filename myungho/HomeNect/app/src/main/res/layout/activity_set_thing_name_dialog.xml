<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.capstone.sejong.homenect.SetThingNameDialog">

    <EditText
        android:id="@+id/et_thingName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="8"
        android:inputType="textPersonName"
        android:hint="Thing 이름" />

    <Button
        android:id="@+id/btn_ok_thingName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:layout_below="@+id/et_thingName"
        android:layout_alignStart="@+id/et_thingName"
        android:layout_toStartOf="@+id/btn_cancel_thingName" />

    <Button
        android:id="@+id/btn_cancel_thingName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소"
        android:layout_alignBaseline="@+id/btn_ok_thingName"
        android:layout_alignBottom="@+id/btn_ok_thingName"
        android:layout_alignEnd="@+id/et_thingName" />
</RelativeLayout>
